#EVALS
case "$SHELL" in
  */bash) eval "$(direnv hook bash)" ;;
  */zsh) eval "$(direnv hook zsh)" ;;
  *)
    echo "[$(date +'%Y-%m-%d %H:%M:%S')] ERROR: unsupported shell '$SHELL'"
    return
    ;;
  esac

eval "$(starship init zsh)"









